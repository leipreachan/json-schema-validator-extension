{
    "manifest_version": 2,
    "name": "JSON Schema Validator",
    "version": "1.0",
    "description": "Validates selected text against a predefined JSON schema",
    "browser_specific_settings": {
      "gecko": {
        "id": "addon@example.com",
        "strict_min_version": "58.0"
      }
    },
    "permissions": [
      "activeTab",
      "storage"
    ],
    "background": {
      "scripts": ["schemasafe/1.3.0/index.js", "background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["*://*.github.com/*"],
        "js": ["content.js"]
      }
    ],
    "options_ui": {
        "page": "options.html",
        "browser_style": true
      }
  }
  